#if ("$!{request.url}" != '')
  #set($result = $services.ontologies.hpo.reindex("$!{request.url}"))
  #if ("$!{request.ajax}" == '1')
    #if ($result == 0)
      Indexing succeeded.
    #else
      $response.setStatus(500)##
      Indexing failed.
    #end

  #else
    #if ($result == 0)
      #set ($indexMessage = "{{info}}Indexing of $!{request.url} succeeded.{{/info}}")
    #else
      #set ($indexMessage = "{{error}}Indexing of $!{request.url} failed.{{/error}}")
    #end
  #end
#end
#if ("$!{request.ajax}" != '1')
$xwiki.jsx.use('PhenoTips.IndexOntology')##
== Index an ontology ==
(% class="half" %)(((
{{html wiki=false clean=false}}
&lt;form class="xform solr-admin" action='' method="post">
&lt;dl>
&lt;dt>
&lt;label for="ontology-url">Ontology&lt;/label>
#set ($version = $services.ontologies.hpo.Version)
&lt;span class="xHint">Current version: #if (!$version)No version could be retrieved.#else$version#end&lt;/span>
&lt;span class="xHint">The URL of a file containing the ontology you wish to index in &lt;a href="http://www.bioontology.org/wiki/index.php/OboInOwl:Main_Page" rel="_blank">OBO format&lt;/a>.&lt;/span>
&lt;/dt>
&lt;dd class="mandatory">&lt;input type="text" name="url" id="ontology-url" value="$services.ontologies.hpo.DefaultOntologyLocation"/>&lt;/dd>
&lt;/dl>
&lt;div>
&lt;span class="buttonwrapper">&lt;input class="button" type="submit" name="actionindex" value="Start reindexing"/>&lt;/span>
&lt;/div>
&lt;/form>
{{/html}}

{{warning}}Indexing may take a while, please be patient.{{/warning}}

)))
#end
{{/velocity}}</content>
