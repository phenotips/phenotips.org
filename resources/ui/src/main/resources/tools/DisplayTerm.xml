{{velocity}}
#if ($request.id)
#set($r = $services.hpo.get($request.id))
= $r.id $r.name =
#if ($r.def)
== Definition ==
$r.def
#end
#if ($r.synonym.size() &gt; 0)
== Symomyms ==
#foreach ($s in $r.synonym)
* $s
#end
#end
#if ($r.is_a.size() &gt; 0)
== Parent categories ==
#foreach ($p in $r.is_a)
#set ($p_id = $p.substring(0, $p.indexOf(' ')))
* [[$p&gt;&gt;DisplayTerm||queryString="id=$p_id"]]
#end
#end
#end
{{/velocity}}
