#if ($xcontext.macro.params.raw.toLowerCase() == 'true')
  #set($scmBase = 'http://raw.github.com')
#else
  #set($scmBase = 'http://www.github.com')
#end
##
#set($scmDefaulUser = 'xwiki')
#set($scmDefaultProject = 'xwiki-platform')
#set($scmDefaultBranch = 'master')
##
#set($scmUrl = "$scmBase")
##
## user
#if ($xcontext.macro.params.user)
  #set($scmUrl = "$scmUrl/${xcontext.macro.params.user}")
#else
  #set($scmUrl = "$scmDefaulUser")
#end
##
## project
#if ($xcontext.macro.params.project)
  #set($scmUrl = "$scmUrl/${xcontext.macro.params.project}")
#end
##
## raw
#if ($xcontext.macro.params.raw.toLowerCase() == 'true')
  #set($scBranchPrefix = '')
#else
  #set($scBranchPrefix = 'tree/')
#end
##
## branch
#if ($xcontext.macro.params.branch)
  #if (!$xcontext.macro.params.project)
    #set($scmUrl = "$scmUrl/$scmDefaultProject")
  #end
  #set($scmUrl = "$scmUrl/${scBranchPrefix}${xcontext.macro.params.branch}")
#end
##
## path
#if ($xcontext.macro.params.path)
  #if (!$xcontext.macro.params.branch &amp;&amp; $scmDefaultBranch)
    #if (!$xcontext.macro.params.project)
      #set($scmUrl = "$scmUrl/$scmDefaultProject")
    #end
    #set($scmUrl = "$scmUrl/${scBranchPrefix}$scmDefaultBranch")
  #end
  #set($scmUrl = "$scmUrl/${xcontext.macro.params.path}")
#end
##
#if ($xcontext.macro.content)
  [[$xcontext.macro.content&gt;&gt;$scmUrl]]
#else
  [[$scmUrl]]
#end
{{/velocity}}</code>
